<h2> <%= @product.name %> </h2>

<h4> Description: </h4>
<p> <%= @product.description %> </p>

<h4> Variants: </h4>

<ul>
  <% @variants.each do |variant| %>
    <li>
      Price: <%= variant.price %>
    </li>
    <li>
      Quantity: <%= variant.quantity %>
    </li>
    <% if buyer_signed_in? %>
      <%= link_to 'Buy', action: "buy", variant_id: variant.id %>
    <% end %>
  <% end %>
</ul>

<h3> Comments: </h3>

<ul>
  <% @comments.each do |comment| %>
    <h4> <%= comment.user_name %> said: </h4>
    <p>
      <%= comment.text %>
    </p>
  <% end %>
</ul>

<%= render "form" %>
